    <script>
        const inputText = document.getElementById('inputText');
        const outputText = document.getElementById('outputText');
        const fromLang = document.getElementById('fromLang');
        const toLang = document.getElementById('toLang');
        const translateBtn = document.getElementById('translateBtn');
        const swapBtn = document.getElementById('swapBtn');
        const recordBtn = document.getElementById('recordBtn');
        const speakInput = document.getElementById('speakInput');
        const speakOutput = document.getElementById('speakOutput');
        const copyBtn = document.getElementById('copyBtn');
        const clearInput = document.getElementById('clearInput');
        const charCount = document.getElementById('charCount');
        const loading = document.getElementById('loading');
        const historyList = document.getElementById('historyList');
        const clearHistory = document.getElementById('clearHistory');
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');

        let history = [];
        let recognition;
        let isRecording = false;
        let isDarkMode = false;

        // Î¦ÏŒÏÏ„Ï‰ÏƒÎ· Î¸Î­Î¼Î±Ï„Î¿Ï‚ Î±Ï€ÏŒ localStorage
        function loadTheme() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                enableDarkMode();
            }
        }

        // Î•Î½Î±Î»Î»Î±Î³Î® Î¸Î­Î¼Î±Ï„Î¿Ï‚
        function toggleTheme() {
            isDarkMode = !isDarkMode;
            if (isDarkMode) {
                enableDarkMode();
            } else {
                disableDarkMode();
            }
        }

        function enableDarkMode() {
            document.body.classList.add('dark-mode');
            themeIcon.textContent = 'ğŸŒ™';
            localStorage.setItem('theme', 'dark');
            isDarkMode = true;
        }

        function disableDarkMode() {
            document.body.classList.remove('dark-mode');
            themeIcon.textContent = 'â˜€ï¸';
            localStorage.setItem('theme', 'light');
            isDarkMode = false;
        }

        // Î§Î¬ÏÏ„Î·Ï‚ Î³Î»Ï‰ÏƒÏƒÏÎ½ Î³Î¹Î± Ï„Î·Î½ Î±Î½Î±Î³Î½ÏÏÎ¹ÏƒÎ· Ï†Ï‰Î½Î®Ï‚
        const langCodes = {
            'Î•Î»Î»Î·Î½Î¹ÎºÎ¬': 'el-GR',
            'Î‘Î³Î³Î»Î¹ÎºÎ¬': 'en-US',
            'Î“Î±Î»Î»Î¹ÎºÎ¬': 'fr-FR',
            'Î™ÏƒÏ€Î±Î½Î¹ÎºÎ¬': 'es-ES',
            'Î“ÎµÏÎ¼Î±Î½Î¹ÎºÎ¬': 'de-DE',
            'Î™Ï„Î±Î»Î¹ÎºÎ¬': 'it-IT',
            'Î Î¿ÏÏ„Î¿Î³Î±Î»Î¹ÎºÎ¬': 'pt-PT',
            'Î¡Ï‰ÏƒÎ¹ÎºÎ¬': 'ru-RU',
            'ÎšÎ¹Î½ÎµÎ¶Î¹ÎºÎ¬': 'zh-CN',
            'Î™Î±Ï€Ï‰Î½Î¹ÎºÎ¬': 'ja-JP',
            'Î‘ÏÎ±Î²Î¹ÎºÎ¬': 'ar-SA',
            'Î¤Î¿ÏÏÎºÎ¹ÎºÎ±': 'tr-TR',
            'ÎšÎ¿ÏÎµÎ¬Ï„Î¹ÎºÎ±': 'ko-KR',
            'ÎŸÎ»Î»Î±Î½Î´Î¹ÎºÎ¬': 'nl-NL',
            'Î£Î¿Ï…Î·Î´Î¹ÎºÎ¬': 'sv-SE'
        };

        // Î¦ÏŒÏÏ„Ï‰ÏƒÎ· Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÎ¿Ï Î±Ï€ÏŒ Î¼Î½Î®Î¼Î·
        function loadHistory() {
            const saved = localStorage.getItem('translationHistory');
            if (saved) {
                history = JSON.parse(saved);
                renderHistory();
            }
        }

        // Î‘Ï€Î¿Î¸Î®ÎºÎµÏ…ÏƒÎ· Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÎ¿Ï
        function saveHistory() {
            localStorage.setItem('translationHistory', JSON.stringify(history));
        }

        // Î•Î¼Ï†Î¬Î½Î¹ÏƒÎ· Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÎ¿Ï
        function renderHistory() {
            if (history.length === 0) {
                historyList.innerHTML = '<p style="text-align: center; color: #999;">Î”ÎµÎ½ Ï…Ï€Î¬ÏÏ‡Î¿Ï…Î½ Î¼ÎµÏ„Î±Ï†ÏÎ¬ÏƒÎµÎ¹Ï‚ Î±ÎºÏŒÎ¼Î±</p>';
                return;
            }

            historyList.innerHTML = history.slice().reverse().map((item, index) => `
                <div class="history-item" onclick="loadFromHistory(${history.length - 1 - index})">
                    <div class="history-item-header">
                        <span>${item.from} â†’ ${item.to}</span>
                        <span>${new Date(item.timestamp).toLocaleTimeString('el-GR')}</span>
                    </div>
                    <div class="history-item-text">
                        <strong>â€º</strong> ${item.input.substring(0, 50)}${item.input.length > 50 ? '...' : ''}
                    </div>
                </div>
            `).join('');
        }

        // Î¦ÏŒÏÏ„Ï‰ÏƒÎ· Î±Ï€ÏŒ Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÏŒ
        function loadFromHistory(index) {
            const item = history[index];
            inputText.value = item.input;
            outputText.value = item.output;
            fromLang.value = item.from;
            toLang.value = item.to;
            updateCharCount();
            speakOutput.disabled = false;
            copyBtn.disabled = false;
        }

        // Î§Î¬ÏÏ„Î·Ï‚ ÎºÏ‰Î´Î¹ÎºÏÎ½ Î³Î»Ï‰ÏƒÏƒÏÎ½ Î³Î¹Î± Ï„Î¿ API
        const apiLangCodes = {
            'Î•Î»Î»Î·Î½Î¹ÎºÎ¬': 'el',
            'Î‘Î³Î³Î»Î¹ÎºÎ¬': 'en',
            'Î“Î±Î»Î»Î¹ÎºÎ¬': 'fr',
            'Î™ÏƒÏ€Î±Î½Î¹ÎºÎ¬': 'es',
            'Î“ÎµÏÎ¼Î±Î½Î¹ÎºÎ¬': 'de',
            'Î™Ï„Î±Î»Î¹ÎºÎ¬': 'it',
            'Î Î¿ÏÏ„Î¿Î³Î±Î»Î¹ÎºÎ¬': 'pt',
            'Î¡Ï‰ÏƒÎ¹ÎºÎ¬': 'ru',
            'ÎšÎ¹Î½ÎµÎ¶Î¹ÎºÎ¬': 'zh',
            'Î™Î±Ï€Ï‰Î½Î¹ÎºÎ¬': 'ja',
            'Î‘ÏÎ±Î²Î¹ÎºÎ¬': 'ar',
            'Î¤Î¿ÏÏÎºÎ¹ÎºÎ±': 'tr',
            'ÎšÎ¿ÏÎµÎ¬Ï„Î¹ÎºÎ±': 'ko',
            'ÎŸÎ»Î»Î±Î½Î´Î¹ÎºÎ¬': 'nl',
            'Î£Î¿Ï…Î·Î´Î¹ÎºÎ¬': 'sv'
        };

        // ÎœÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ· Î¼Îµ MyMemory API (Î´Ï‰ÏÎµÎ¬Î½)
        async function translate() {
            const text = inputText.value.trim();
            if (!text) {
                showNotification('âš ï¸ Î Î±ÏÎ±ÎºÎ±Î»Ï ÎµÎ¹ÏƒÎ¬Î³ÎµÏ„Îµ ÎºÎµÎ¯Î¼ÎµÎ½Î¿!', 'error');
                return;
            }

            if (fromLang.value === toLang.value) {
                showNotification('âš ï¸ Î•Ï€Î¹Î»Î­Î¾Ï„Îµ Î´Î¹Î±Ï†Î¿ÏÎµÏ„Î¹ÎºÎ­Ï‚ Î³Î»ÏÏƒÏƒÎµÏ‚!', 'error');
                return;
            }

            loading.style.display = 'block';
            translateBtn.disabled = true;

            try {
                const sourceLang = apiLangCodes[fromLang.value];
                const targetLang = apiLangCodes[toLang.value];
                
                const url = `https://api.mymemory.translated.net/get?q=${encodeURIComponent(text)}&langpair=${sourceLang}|${targetLang}`;
                
                const response = await fetch(url);
                const data = await response.json();
                
                if (data.responseStatus !== 200) {
                    throw new Error('Î£Ï†Î¬Î»Î¼Î± API');
                }
                
                const translatedText = data.responseData.translatedText;
                outputText.value = translatedText;

                // Î ÏÎ¿ÏƒÎ¸Î®ÎºÎ· ÏƒÏ„Î¿ Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÏŒ
                history.push({
                    from: fromLang.value,
                    to: toLang.value,
                    input: text,
                    output: translatedText,
                    timestamp: new Date().toISOString()
                });

                saveHistory();
                renderHistory();
                
                speakOutput.disabled = false;
                copyBtn.disabled = false;
                
                showNotification('âœ… ÎœÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ· Î¿Î»Î¿ÎºÎ»Î·ÏÏÎ¸Î·ÎºÎµ!');
            } catch (error) {
                showNotification('âŒ Î£Ï†Î¬Î»Î¼Î± Î¼ÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ·Ï‚. Î•Î»Î­Î³Î¾Ï„Îµ Ï„Î· ÏƒÏÎ½Î´ÎµÏƒÎ® ÏƒÎ±Ï‚.', 'error');
                console.error(error);
            } finally {
                loading.style.display = 'none';
                translateBtn.disabled = false;
            }
        }

        // Î‘Î½Ï„Î¹ÏƒÏ„ÏÎ¿Ï†Î® Î³Î»Ï‰ÏƒÏƒÏÎ½
        function swapLanguages() {
            const temp = fromLang.value;
            fromLang.value = toLang.value;
            toLang.value = temp;

            const tempText = inputText.value;
            inputText.value = outputText.value;
            outputText.value = tempText;

            updateCharCount();
            
            if (outputText.value) {
                speakOutput.disabled = false;
                copyBtn.disabled = false;
            }
        }

        // ÎšÎ±Ï„Î±Î³ÏÎ±Ï†Î® Ï†Ï‰Î½Î®Ï‚
        function startRecording() {
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                showNotification('âŒ Î— Î±Î½Î±Î³Î½ÏÏÎ¹ÏƒÎ· Ï†Ï‰Î½Î®Ï‚ Î´ÎµÎ½ Ï…Ï€Î¿ÏƒÏ„Î·ÏÎ¯Î¶ÎµÏ„Î±Î¹!', 'error');
                return;
            }

            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            recognition.lang = langCodes[fromLang.value] || 'el-GR';
            recognition.continuous = false;
            recognition.interimResults = false;

            recognition.onstart = () => {
                isRecording = true;
                recordBtn.style.background = '#ff6b6b';
                recordBtn.innerHTML = 'â¹ï¸';
                showNotification('ğŸ¤ ÎœÎ¹Î»Î®ÏƒÏ„Îµ Ï„ÏÏÎ±...');
            };

            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                inputText.value = transcript;
                updateCharCount();
                showNotification('âœ… Î¦Ï‰Î½Î® Î±Î½Î±Î³Î½Ï‰ÏÎ¯ÏƒÏ„Î·ÎºÎµ!');
            };

            recognition.onerror = (event) => {
                showNotification('âŒ Î£Ï†Î¬Î»Î¼Î± Î±Î½Î±Î³Î½ÏÏÎ¹ÏƒÎ·Ï‚ Ï†Ï‰Î½Î®Ï‚', 'error');
                resetRecordButton();
            };

            recognition.onend = () => {
                resetRecordButton();
            };

            if (isRecording) {
                recognition.stop();
            } else {
                recognition.start();
            }
        }

        function resetRecordButton() {
            isRecording = false;
            recordBtn.style.background = '';
            recordBtn.innerHTML = 'ğŸ¤';
        }

        // Î‘Î½Î¬Î³Î½Ï‰ÏƒÎ· ÎºÎµÎ¹Î¼Î­Î½Î¿Ï…
        function speak(text, lang) {
            if (!text) {
                showNotification('âš ï¸ Î”ÎµÎ½ Ï…Ï€Î¬ÏÏ‡ÎµÎ¹ ÎºÎµÎ¯Î¼ÎµÎ½Î¿ Î³Î¹Î± Î±Î½Î¬Î³Î½Ï‰ÏƒÎ·!', 'error');
                return;
            }

            if ('speechSynthesis' in window) {
                window.speechSynthesis.cancel();
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = langCodes[lang] || 'el-GR';
                utterance.rate = 0.9;
                utterance.pitch = 1;
                
                utterance.onstart = () => {
                    showNotification('ğŸ”Š Î‘Î½Î±Ï€Î±ÏÎ±Î³Ï‰Î³Î®...');
                };
                
                utterance.onerror = () => {
                    showNotification('âŒ Î£Ï†Î¬Î»Î¼Î± Î±Î½Î±Ï€Î±ÏÎ±Î³Ï‰Î³Î®Ï‚', 'error');
                };
                
                window.speechSynthesis.speak(utterance);
            } else {
                showNotification('âŒ Î— ÏƒÏÎ½Î¸ÎµÏƒÎ· Î¿Î¼Î¹Î»Î¯Î±Ï‚ Î´ÎµÎ½ Ï…Ï€Î¿ÏƒÏ„Î·ÏÎ¯Î¶ÎµÏ„Î±Î¹!', 'error');
            }
        }

        // Î‘Î½Ï„Î¹Î³ÏÎ±Ï†Î®
        function copyToClipboard() {
            const text = outputText.value;
            if (!text) {
                showNotification('âš ï¸ Î”ÎµÎ½ Ï…Ï€Î¬ÏÏ‡ÎµÎ¹ ÎºÎµÎ¯Î¼ÎµÎ½Î¿ Î³Î¹Î± Î±Î½Ï„Î¹Î³ÏÎ±Ï†Î®!', 'error');
                return;
            }

            navigator.clipboard.writeText(text).then(() => {
                showNotification('ğŸ“‹ Î‘Î½Ï„Î¹Î³ÏÎ¬Ï†Î·ÎºÎµ ÏƒÏ„Î¿ clipboard!');
            }).catch(() => {
                // Fallback Î¼Î­Î¸Î¿Î´Î¿Ï‚
                outputText.select();
                document.execCommand('copy');
                showNotification('ğŸ“‹ Î‘Î½Ï„Î¹Î³ÏÎ¬Ï†Î·ÎºÎµ!');
            });
        }

        // Î•Î½Î·Î¼Î­ÏÏ‰ÏƒÎ· Î¼ÎµÏ„ÏÎ·Ï„Î® Ï‡Î±ÏÎ±ÎºÏ„Î®ÏÏ‰Î½
        function updateCharCount() {
            const length = inputText.value.length;
            charCount.textContent = length;
            if (length > 5000) {
                charCount.style.color = '#ff6b6b';
            } else {
                charCount.style.color = '#999';
            }
        }

        // Î•Î¼Ï†Î¬Î½Î¹ÏƒÎ· ÎµÎ¹Î´Î¿Ï€Î¿Î¯Î·ÏƒÎ·Ï‚
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.background = type === 'error' ? '#ff6b6b' : '#4caf50';
            notification.style.display = 'block';
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // Event Listeners
        themeToggle.addEventListener('click', toggleTheme);
        translateBtn.addEventListener('click', translate);
        swapBtn.addEventListener('click', swapLanguages);
        recordBtn.addEventListener('click', startRecording);
        speakInput.addEventListener('click', () => speak(inputText.value, fromLang.value));
        speakOutput.addEventListener('click', () => speak(outputText.value, toLang.value));
        copyBtn.addEventListener('click', copyToClipboard);
        
        clearInput.addEventListener('click', () => {
            inputText.value = '';
            outputText.value = '';
            updateCharCount();
            speakOutput.disabled = true;
            copyBtn.disabled = true;
        });
        
        clearHistory.addEventListener('click', () => {
            if (confirm('Î•Î¯ÏƒÏ„Îµ ÏƒÎ¯Î³Î¿Ï…ÏÎ¿Î¹ ÏŒÏ„Î¹ Î¸Î­Î»ÎµÏ„Îµ Î½Î± Î´Î¹Î±Î³ÏÎ¬ÏˆÎµÏ„Îµ Ï„Î¿ Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÏŒ;')) {
                history = [];
                saveHistory();
                renderHistory();
                showNotification('ğŸ—‘ï¸ Î¤Î¿ Î¹ÏƒÏ„Î¿ÏÎ¹ÎºÏŒ Î´Î¹Î±Î³ÏÎ¬Ï†Î·ÎºÎµ');
            }
        });
        
        inputText.addEventListener('input', updateCharCount);
        
        inputText.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && e.ctrlKey) {
                translate();
            }
        });

        // Î‘ÏÏ‡Î¹ÎºÎ¿Ï€Î¿Î¯Î·ÏƒÎ·
        loadTheme();
        loadHistory();
        updateCharCount();
    </script>
</body>
</html>
